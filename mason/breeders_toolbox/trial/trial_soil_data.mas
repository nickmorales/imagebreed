<%args>
$trial_id
</%args>

<& /util/import_javascript.mas, classes => ['jquery','jquery.dataTables'] &>
<& /util/import_css.mas, paths => ['/documents/inc/datatables/jquery.dataTables.css'] &>



<&| /page/info_section.mas, title => "Trial Soil Data", collapsible=>1, collapsed=>0 &>
    <div class = "well well-sm">
        <div class = "panel panel-default">
            <div class = "panel-body">
                <table id = "soil_data_table" class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Soil Data ID</th>
                            <th>Description</th>
                            <th>Year</th>
                            <th>GPS</th>
                            <th>Type of Sampling</th>
                            <th>Soil Data</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</&>

<script defer="defer">

jQuery(document).ready(function () {

    jQuery('#soil_data_table').DataTable({
        'autoWidth': false,
        'searching': false,
        'order': false,
        'ajax':'/ajax/breeders/trial/'+ <% $trial_id %> + '/soil_data',
    });

});

</script>
