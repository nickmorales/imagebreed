<%args>

</%args>


<div class="modal fade" id="upload_soil_data_dialog" name="upload_soil_data_dialog" tabindex="-1" role="dialog" aria-labelledby="uploadSoilDataDialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="uploadSoilDataDialog">Upload Soil Data for this Trial </h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <br>
                    <&| /page/explanation.mas, title=>'Template Information' &>
                        <p>
                            <b>File Format Information</b>
                            <br>
                            <a id="soil_data_spreadsheet_format">Spreadsheet Format</a>
                            <br>
                        </p>
                    </&>
                    <form class="form-horizontal" role="form" method="post" enctype="multipart/form-data" encoding="multipart/form-data" id="upload_crossinfo_form" name="upload_crossinfo_form">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Upload File: </label>
                                <div class="col-sm-10">
                                    <input type="file" name="soil_data_upload_file" id="soil_data_upload_file" encoding="multipart/form-data" />
                                </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" name="soil_data_submit" id="soil_data_submit">Upload File</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="upload_soil_data_error_display" name="upload_soil_data_error_display" tabindex="-1" role="dialog" aria-labelledby="uploadSoilDataErrorDialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="uploadSoilDataDialog">Upload Soil Data File Error</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <table>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="upload_soil_data_spreadsheet_info_dialog" name="upload_soil_data_spreadsheet_info_dialog" tabindex="-1" role="dialog" aria-labelledby="uploadSoilDataFormatDialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="uploadSoilDataFormatDialog">Template Information</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <b>
                        Cross info of existing crosses may be uploaded in an Excel file (.xls)
                    </b>
                    <br>
                        (.xlsx format not supported)
                    <br><br>
                    <b>
                        Header:
                    </b>
                    <br>
                        The first row (header) must contain the following:
                    <br>

                    <table class="table table-bordered table-hover">
                        <tbody>
                            <tr>
                                <td>cross_unique_id</td>
                                <td>At least one column of cross info listed below (please use exact column header as shown)</td>
                            </tr>
                        </tbody>
                    </table>
                    <b>
                        Required columns:
                    </b>
                    <ul>
                        <li><b>cross_unique_id:</b> Must exist in the database, must not have duplicate cross unique id in the same upload file.
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="soil_data_saved_dialog_message" name="soil_data_saved_dialog_message" tabindex="-1" role="dialog" aria-labelledby=soilDataSavedDialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="soilDataSavedDialog">Success</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <p>
                        <span class="ui-icon ui-icon-circle-check" style="float: left; margin: 0 7px 50px 0;"></span>
                        Soil data was saved successfully.
                    </p>
                </div>
            </div>
            <div class="modal-footer">
                <button id="dismiss_cross_info_saved_dialog" type="button" class="btn btn-default" data-dismiss="modal">Close & Reload</button>
            </div>
        </div>
    </div>
</div>


<script>

jQuery(document).ready(function(){

    jQuery("#trial_upload_soil_data_button").click(function(){

        jQuery("#upload_additional_info_format").click(function(){
            jQuery("#upload_additional_info_format_dialog").modal("show");
        });

        jQuery("#upload_soil_data_dialog").modal("show");
    });

    jQuery("#upload_additional_info_submit").click(function(){
        var uploadFile = jQuery("#additional_info_upload_file").val();
        jQuery('#upload_additional_info_form').attr("action", "/ajax/cross/upload_info");
        if (uploadFile === ''){
            alert("Please select a file");
            return;
        }
        jQuery("#upload_additional_info_form").submit();
        jQuery("#upload_additional_info_dialog").modal("hide");
    });

    jQuery('#upload_additional_info_form').iframePostForm({
        json: true,
        post: function(){
            jQuery("#working_modal").modal("show");
        },
        complete: function(response){
            jQuery("#working_modal").modal("hide");
            if (response.error_string){
                jQuery("#upload_crossinfo_error_display tbody").html('');
                jQuery("#upload_crossinfo_error_display tbody").append(response.error_string);
                jQuery("#upload_crossinfo_error_display").modal("show");
                return;
            }
            if (response.error) {
                alert(response.error);
                return;
            }
            if (response.success) {
                jQuery('#cross_info_saved_dialog_message').modal("show");
            }
        }
    });


});

</script>
